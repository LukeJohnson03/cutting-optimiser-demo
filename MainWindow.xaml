<Window x:Class="CuttingOptimiserDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CuttingOptimiserDemo"
        Title="Glass Cutting Optimizer" 
        Height="700" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#FFEEEEEE">
            <ComboBox x:Name="SheetSelector" 
                      Width="200" 
                      Margin="5"
                      DisplayMemberPath="Id"
                      FontSize="14"
                      SelectedValuePath="Id"/>

            <Button x:Name="OptimizeButton" 
                    Content="Optimize Sheet" 
                    Padding="15,5" 
                    Margin="5"
                    FontSize="14"
                    Click="Optimize_Click"/>

            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                <TextBlock Text="Zoom:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0"
                           FontSize="14"/>
                <Slider x:Name="ZoomSlider" 
                        Minimum="0.1" 
                        Maximum="2" 
                        Value="1" 
                        Width="150" 
                        Margin="5"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="True"/>
                <TextBlock Text="{Binding ElementName=ZoomSlider, Path=Value, StringFormat={}{0:F1}x}"
                           Width="40"
                           TextAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          Background="WhiteSmoke">
                <Canvas x:Name="LayoutCanvas" 
                        ClipToBounds="True"
                        Width="{Binding CurrentSheet.Width, FallbackValue=1000}"
                        Height="{Binding CurrentSheet.Height, FallbackValue=800}"
                        RenderTransformOrigin="0.5,0.5">
                    <Canvas.RenderTransform>
                        <ScaleTransform ScaleX="{Binding ElementName=ZoomSlider, Path=Value}"
                                       ScaleY="{Binding ElementName=ZoomSlider, Path=Value}"/>
                    </Canvas.RenderTransform>

                    <Canvas.Resources>
                        <Style TargetType="Rectangle">
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                        </Style>
                        <Style TargetType="Line">
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                        </Style>
                    </Canvas.Resources>
                </Canvas>
            </ScrollViewer>
        </Border>

        <StatusBar Grid.Row="2" Background="#FFEEEEEE">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" 
                           Text="Select a sheet and click Optimize" 
                           FontSize="14"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="DimensionsText"
                           Text="{Binding CurrentSheet.Dimensions, FallbackValue='Sheet: 0×0 mm'}"
                           FontSize="14"
                           Margin="0,0,10,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>