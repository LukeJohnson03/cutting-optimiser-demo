<Window x:Class="CuttingOptimiserDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Glass Cutting Optimizer" 
        Height="750" Width="1000"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFD40000" Offset="0"/>
            <GradientStop Color="#FF9A0000" Offset="1"/>
        </LinearGradientBrush>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource RedGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" Opacity="0.3" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#FFEEEEEE">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="SheetSelector" 
                          Grid.Column="0"
                          Width="220"
                          Margin="0,0,15,0"
                          FontSize="14"
                          DisplayMemberPath="Id"
                          SelectedValuePath="Id"/>

                <Button x:Name="OptimizeButton" 
                        Grid.Column="1"
                        Content="OPTIMIZE SHEET" 
                        Width="180"
                        FontSize="14"
                        Click="Optimize_Click"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal" 
                            Margin="25,0,0,0" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                    <TextBlock Text="ZOOM:" 
                               Foreground="#FF555555"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                    <Slider x:Name="ZoomSlider" 
                            Minimum="0.1" 
                            Maximum="2" 
                            Value="1" 
                            Width="150" 
                            Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ElementName=ZoomSlider, Path=Value, StringFormat={}{0:F1}x}"
                               Foreground="#FF777777"
                               FontSize="13"
                               Width="40"
                               TextAlignment="Center"/>
                </StackPanel>

                <Button x:Name="ExportButton" 
                        Grid.Column="3"
                        Content="EXPORT" 
                        Width="100"
                        Margin="10,0,0,0"
                        FontSize="14"
                        Click="Export_Click"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Margin="15" Background="White" BorderBrush="#FFEEEEEE" BorderThickness="1" CornerRadius="2">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="LayoutCanvas" 
                        ClipToBounds="True"
                        Background="White"
                        Width="{Binding CurrentSheet.Width, FallbackValue=1000}"
                        Height="{Binding CurrentSheet.Height, FallbackValue=800}">
                    <Canvas.RenderTransform>
                        <ScaleTransform ScaleX="{Binding ElementName=ZoomSlider, Path=Value}"
                                       ScaleY="{Binding ElementName=ZoomSlider, Path=Value}"/>
                    </Canvas.RenderTransform>
                </Canvas>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" Background="#FFFAFAFA" BorderThickness="1,0,0,0" BorderBrush="#FFEEEEEE">
            <Grid>
                <TextBlock x:Name="StatusText" 
                           Text="Ready" 
                           FontSize="13"
                           Foreground="#FF555555"
                           Margin="15,0"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="DimensionsText"
                           HorizontalAlignment="Right"
                           FontSize="13"
                           Foreground="#FF777777"
                           Margin="0,0,15,0"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>